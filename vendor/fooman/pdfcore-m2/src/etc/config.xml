<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <sales_pdf>
            <all>
                <!--Page Settings-->
                <allpagesize>A4</allpagesize>
                <allpageorientation>P</allpageorientation>
                <allmargintop>15</allmargintop>
                <allmarginbottom>25</allmarginbottom>
                <allmarginsides>20</allmarginsides>
                <page>
                    <nobginadmin>0</nobginadmin>
                </page>
                <alldoublesidedprint>0</alldoublesidedprint>

                <!--Font and Barcode Settings-->
                <allfont>helvetica</allfont>
                <allfontsize>12</allfontsize>
                <fontsubsetting>1</fontsubsetting>
                <allbarcode>C39E+</allbarcode>
                <barcode_source>sku</barcode_source>
                <qr_source>sku</qr_source>
                <!--Logo Settings-->
                <logo>
                    <placement>auto-left</placement>
                    <maxheight>25</maxheight>
                </logo>

                <!--Miscellanous-->
                <openinbrowser>1</openinbrowser>
                <allqtyasint>1</allqtyasint>
            </all>
        </sales_pdf>
    </default>
</config>

